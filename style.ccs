body {
  font-family: 'Poppins', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #fffaf7;
  color: #444;
  text-align: center;
}

header {
  background-color: #fbe7e0;
  padding: 2rem 1rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.logo {
  font-size: 2.2rem;
  color: #b76e79;
  margin: 0;
}

.tagline {
  font-style: italic;
  color: #9c5d63;
}

.hero {
  background: linear-gradient(135deg, #f9dcdc, #fef5f5);
  padding: 5rem 1rem;
}

.hero-content {
  max-width: 600px;
  margin: 0 auto;
}

.hero h2 {
  font-size: 2.3rem;
  color: #b76e79;
}

.hero p {
  font-size: 1.1rem;
  margin: 1rem 0 2rem;
}

.btn {
  background-color: #b76e79;
  color: white;
  padding: 0.8rem 1.6rem;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  transition: 0.3s;
}

.btn:hover {
  background-color: #9c5d63;
}

.products {
  padding: 3rem 1rem;
}

.products h2 {
  color: #b76e79;
  margin-bottom: 2rem;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1.5rem;
}

.product-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  width: 250px;
  transition: transform 0.3s ease;
}

.product-card:hover {
  transform: translateY(-5px);
}

.product-card img {
  width: 100%;
  border-radius: 12px 12px 0 0;
}

.product-card h3 {
  color: #9c5d63;
  padding: 0.8rem;
}

.instagram {
  background: #fff3f2;
  padding: 3rem 1rem;
}

.instagram h2 {
  color: #b76e79;
  margin-bottom: 0.5rem;
}

.insta-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
  margin: 2rem auto;
  max-width: 700px;
}

.insta-grid img {
  width: 100%;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.insta-grid img:hover {
  transform: scale(1.05);
}

footer {
  background-color: #fbe7e0;
  padding: 1.5rem;
  font-size: 0.9rem;
  color: #9c5d63;
}
